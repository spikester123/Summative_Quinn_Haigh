<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Louvre">

    <Button
        android:id="@+id/btnContinue8"
        android:layout_width="141dp"
        android:layout_height="46dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="102dp"
        android:onClick="TicketFun"
        android:text="Continue"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LouvreQTY" />

    <TextView
        android:id="@+id/txtLouvreTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="153dp"
        android:layout_marginTop="18dp"
        android:text="Louvre"
        android:textColor="#050505"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgLouvre"
        android:layout_width="184dp"
        android:layout_height="191dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLouvreTitle"
        app:srcCompat="@drawable/thelouvre" />

    <TextView
        android:id="@+id/txtLouvre"
        android:layout_width="170dp"
        android:layout_height="190dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="67dp"
        android:text="The Louvre is the worlds largest art museum and a historic monument in Paris, France. It is best know for being the home of the Mona Lisa"
        android:textColor="#070707"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/imgLouvre"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/LouvreDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="33dp"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="38dp"
        android:text="Time"
        android:textColor="#090909"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLouvre" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="201dp"
        android:text="Date"
        android:textColor="#070707"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLouvre" />

    <EditText
        android:id="@+id/LouvreQTY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="35dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="130dp"
        android:text="How many Tickets"
        android:textColor="#070707"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LouvreDate" />

    <RadioGroup
        android:id="@+id/LouvreTimeSlots"
        android:layout_width="100dp"
        android:layout_height="189dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <RadioButton
            android:id="@+id/radioBtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:onClick="checkButton"
            android:text="9-11 am" />

        <RadioButton
            android:id="@+id/radioBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:onClick="checkButton"
            android:text="11-1 pm" />

        <RadioButton
            android:id="@+id/radioBtn3"
            android:layout_width="83dp"
            android:layout_height="44dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:onClick="checkButton"
            android:text="1-3 pm" />

        <RadioButton
            android:id="@+id/radioButton10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:onClick="checkButton"
            android:text="3-5 pm" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="1dp"
        android:text="Price Â£10"
        android:textColor="#090909"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLouvre" />

</androidx.constraintlayout.widget.ConstraintLayout>